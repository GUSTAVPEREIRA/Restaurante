<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="rootPane" maxHeight="130.0" maxWidth="700.0" onMouseEntered="#actMouseEntered" onMouseExited="#actMouseExited" stylesheets="@FXMLNotificationStylesheet.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="estagio.ui.notifications.FXNotificationController">
   <children>
      <HBox fx:id="principal" maxHeight="90.0" minHeight="60.0" minWidth="150.0" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
         <children>
            <VBox style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
               <children>
                  <TextArea fx:id="textAreaNotifications" editable="false" prefWidth="375.0" style="-fx-background-color: white;" wrapText="true">
                     <font>
                        <Font size="15.0" />
                     </font></TextArea>
               </children>
            </VBox>
            <VBox style="-fx-background-color: white;">
               <children>
                  <JFXButton alignment="CENTER" contentDisplay="CENTER" minWidth="34.0" onAction="#actCloseNotification" prefHeight="27.0" prefWidth="34.0" styleClass="excluir" stylesheets="@../../view/css/buttons.css" text=" ">
                     <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="CLOSE" size="15" />
                     </graphic>
                  </JFXButton>
               </children>
            </VBox>
         </children>
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin>
         <effect>
            <DropShadow />
         </effect>
      </HBox>
   </children>
</HBox>
